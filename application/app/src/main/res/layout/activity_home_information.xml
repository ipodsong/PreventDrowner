<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@null">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="9"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="NAME"
                android:textSize="15dp"
                android:textColor="@color/indigo"
                android:fontFamily="@font/basic"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/inputChildName"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:textSize="15dp"
                android:textColor="@color/indigo"
                android:textColorHint="@color/light_gray"
                android:layout_height="match_parent"
                android:hint="Enter child's name"
                android:fontFamily="@font/basic"
                android:inputType= "textPersonName"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="AGE"
                android:textSize="15dp"
                android:textColor="@color/indigo"
                android:fontFamily="@font/basic"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/inputChildAge"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:textSize="15dp"
                android:layout_height="match_parent"
                android:hint="Enter child's age"
                android:textColor="@color/indigo"
                android:textColorHint="@color/light_gray"
                android:inputType="number"
                android:fontFamily="@font/basic"
                android:gravity="center_vertical"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="60dp"
                android:textSize="15dp"
                android:layout_height="match_parent"
                android:text="WEIGHT"
                android:textColor="@color/indigo"
                android:fontFamily="@font/basic"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/inputChildWeight"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:textSize="15dp"
                android:layout_height="match_parent"
                android:hint="Enter child's weight"
                android:textColor="@color/indigo"
                android:fontFamily="@font/basic"
                android:textColorHint="@color/light_gray"
                android:inputType="numberDecimal"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/inputChildInformationNext"
        android:layout_width="0dp"
        android:layout_weight="1.7"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:src="@drawable/next_btn"
        android:scaleType="centerInside"
        android:visibility="gone"/>




</LinearLayout>