<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@null"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="NAME"
            android:fontFamily="@font/basic"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/inputChildName"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:hint="Enter child's name"
            android:inputType= "textPersonName"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="AGE"
            android:fontFamily="@font/basic"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/inputChildAge"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:hint="Enter child's age"
            android:inputType="number"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="WEIGHT"
            android:fontFamily="@font/basic"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/inputChildWeight"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:hint="Enter child's weight"
            android:inputType="numberDecimal"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/inputChildInformationNext"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:background="@color/colorAccent"
            android:text="NEXT ->"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />


    </LinearLayout>


</LinearLayout>